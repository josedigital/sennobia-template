.Products
  background-color: #000
  min-height: 800px
  padding: 6rem 3rem
  position: relative
  p
    fs: 1.2rem

.Products__background
  background-image: url('../img/hero-image.jpg')
  background-repeat: no-repeat
  background-size: cover
  height: 100%
  left: 0
  opacity: 0.3
  +above($breakpoint-tablet)
    opacity: 0.8
  position: absolute
  right: 0
  top: 0
  transform: scaleX(-1);
  z-index: 0

.Products__content
  color: $white
  margin-top: 6rem
  position: relative
  h2
    color: $white
  +above($breakpoint-tablet)
    color: inherit
    float: right
    margin-top: 0
    width: 40%
    h2
      color: inherit
  



.Products-gallery
  background-color: lighten($gray-light, 90%)
  +above($breakpoint-tablet)
    padding: 3rem

.Product
  background-color: $white
  border: 1px solid lighten($gray-light, 50%)
  box-shadow: 0 0 8px rgba($gray-lighter, 0.85)
  height: 600px 
  padding: 2rem
  img
    border: 1px solid darken($gray-lighter, 5%)
    box-shadow: 0 0 10px rgba($gray-light, 0.2)
    margin-bottom: 1rem
  
.Product--full
  img
    width: 50%